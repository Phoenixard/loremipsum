html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
		title Loremipsum
		link(rel="stylesheet" href="./css/main.css")
		link(rel="stylesheet" href="https://atuin.ru/demo/ui-slider/jquery-ui.css")
		include ./svg-sprite.pug

	.page
		header.header
			.mobile-menu.js-mobile-btn
				.mobile-menu__wrapper
					.mobile-menu__row
					.mobile-menu__row
					.mobile-menu__row
			.header__wrapper.js-mobile-menu
				.container
					.header__inner
						.header__close.js-mobile-close
						a(href="").header__logo.header-logo
							span.header-logo__text Loremipsum.
							span.header-logo__text.header-logo__text_colored Net
						.header__menu.menu
							a(href="").menu__item.menu__item_active Бизнес
							a(href="").menu__item О нас
							a(href="").menu__item Цены
							a(href="").menu__item Оформить заказ

		main.main
			section.cover
				.container
					.cover__wrapper
						.cover__title.cover-title
							span.cover-title__text.cover-title__text_colored Lorem ipsum
							span.cover-title__text Dolor sit amet consectetur
							span.cover-title__text.cover-title__text_colored Adipiscing
						.cover__content.cover-content
							p.cover-content__text.cover-content__text_bold At vero eos et accusamus et iusto odio dignissimos ducimus!
							ul.cover-content__list.cover-content-list
								li.cover-content-list__item Totam rem aperiam eaque ipsa
								li.cover-content-list__item Sit voluptatem accusantium doloremque laudantium
								li.cover-content-list__item Sed ut perspiciatis, unde omnis iste natus error
						.cover__controls.cover-controls
							.cover-controls__item
								a(href="").btn Заказать
							.cover-controls__item
								a(href="").btn.btn_white Подробнее

			section.section.section_order
				.section__container
					.section__title.section-title
							span.section-title__text Оформление
							span.section-title__text.section-title__text_colored Заказа
					.section__subtitle.section-subtitle
							span.section-subtitle__text Перед заполнением формы ознакомьтесь с нашей схемой работы!

					.section__steps.steps
						ul.steps__list.steps-list
							li.steps-list__item.list-item
								.list-item__icon.list-item-icon
									svg.list-item-icon__svg
										use(xlink:href="#icon-loop")
								.list-item__text Lorem ipsum dolor sit amet

							li.steps-list__item.list-item
								.list-item__icon.list-item-icon
									svg.list-item-icon__svg
										use(xlink:href="#icon-percent")
								.list-item__text Сonsecteturadipiscing elit

							li.steps-list__item.list-item
								.list-item__icon.list-item-icon
									svg.list-item-icon__svg
										use(xlink:href="#icon-add-document")
								.list-item__text Sed do eiusmod tempor

							li.steps-list__item.list-item
								.list-item__icon.list-item-icon
									svg.list-item-icon__svg
										use(xlink:href="#icon-mail-white")
								.list-item__text Esse cillum doloreeu fugiat

							li.steps-list__item.list-item
								.list-item__icon.list-item-icon
									svg.list-item-icon__svg
										use(xlink:href="#icon-money")
								.list-item__text Excepteur sint occaecat cupidatat non proident

					form.form(action="" method="")
						.form__row
							.form__field
								.select(data-select)
									span Sed ut perspiciatis
									span Nemo enim ipsam
									span Et harum quidem
									span Temporibus autem
									span Itaque earum rerum
									span Itaque earum rerum

							.form__field.field
								.field__inner
									input(type="email" name="email" placeholder="Ваш e-mail").field__input
							.form__field.field
								.field__inner
									input(type="text" name="name" placeholder="Вашe имя").field__input
						.form__row
							.form__field.form__field_medium
								.range-slider
									.range-slider__description
										.range-slider__title Sed ut perspiciatis, unde omnis iste natus
										.range-slider__value.range-slider-value
											span.range-slider-value__text(data-slider-value)
											span.range-slider-value__text %
									.range-slider__slider
										.range-slider-scale(data-slider)
							.form__field.field.field_attach
								.field__inner
									input(type="file" name="file" id="input__attach").field__input
									label(for="input__attach").field__label.field-label
										svg.field-label__icon
											use(xlink:href="#icon-attach")
										span.field-label__text Прикрепить файл
						.form__btn
							button(type="submit").btn.btn_form Отправить

		footer.footer
			.container
				.footer__wrapper
					.footer__col.footer__col_copyright
						.footer__copyright © 2018 «LOREMIPSUM.NET» Все права защищены.

					.footer__col.footer__col_wide.footer__col_payment
						.footer__payment.footer-payment
							.footer-payment__item.footer-item
								svg.footer-item__icon
									use(xlink:href="#icon-qiwi")
								.footer-item__text QIWI wallet

							.footer-payment__item.footer-item
								svg.footer-item__icon
									use(xlink:href="#icon-yandex")
								.footer-item__text Yandex Money

							.footer-payment__item.footer-item
								svg.footer-item__icon
									use(xlink:href="#icon-webmoney")
								.footer-item__text Web Money

					.footer__col.footer__col_contacts
						.footer-contacts
							.footer-contacts__item
								a(href="mailto:info@ipsum228.com").footer-item
									svg.footer-item__icon
										use(xlink:href="#icon-mail")
									span.footer-item__text.footer-item__text_color_white info@ipsum228.com

							.footer-contacts__item
								a(href="").footer-item
									svg.footer-item__icon
										use(xlink:href="#icon-vk")
									span.footer-item__text.footer-item__text_color_white Мы вконтакте

